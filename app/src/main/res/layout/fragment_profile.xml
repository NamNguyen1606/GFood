<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="100"
    android:orientation="vertical"
    tools:context=".activity.ProfileFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="10"
        android:background="@drawable/app_background">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Profile"
            android:textSize="30sp"
            android:textStyle="bold" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="20"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:orientation="vertical">

            <ImageView
                android:layout_gravity="center"
                android:id="@+id/imgProfUserAvatar"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5"
                android:padding="5dp"
                android:scaleType="fitXY"
                android:src="@mipmap/icon_user_" />

            <Button
                android:id="@+id/btnProfEdit"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="#E5E3E6"
                android:layout_marginHorizontal="5dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:text="Edit" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="14"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvProfUsername"
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:layout_height="0dp"
                android:layout_weight="4"
                android:paddingLeft="10dp"
                android:textSize="30sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tvProfPhone"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:paddingLeft="10dp"
                android:text="Phone number: "
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tvProfAddress"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="7"
                android:paddingLeft="10dp"
                android:paddingTop="15dp"
                android:text="Address: "
                android:textSize="20sp" />

        </LinearLayout>



    </LinearLayout>

    <TextView
        android:id="@+id/tvProfChangePwd"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="15"
        android:paddingLeft="15dp"
        android:paddingTop="10dp"
        android:text="Change password"
        android:textSize="20sp"
        android:background="@drawable/ripple_effect_raise"/>

    <TextView
        android:id="@+id/tvProfPayment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="15"
        android:paddingLeft="15dp"
        android:paddingTop="10dp"
        android:text="Payment"
        android:textSize="20sp"
        android:background="@drawable/ripple_effect_raise"/>

    <TextView
        android:id="@+id/tvProfHistory"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="15"
        android:paddingLeft="15dp"
        android:paddingTop="10dp"
        android:text="History"
        android:textSize="20sp"
        android:background="@drawable/ripple_effect_raise"/>

    <TextView
        android:id="@+id/tvProfSignOut"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="15"
        android:paddingLeft="15dp"
        android:paddingTop="10dp"
        android:text="Sign out"
        android:textSize="20sp"
        android:background="@drawable/ripple_effect_raise"/>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="10"></FrameLayout>

</LinearLayout>