<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fraghome_Layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="100"
    android:orientation="vertical"
    tools:context=".HomeFragment">

    // Search

    <LinearLayout
        android:id="@+id/fragHome_search_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:background="@drawable/app_background">

        <EditText
            android:id="@+id/fragHome_search_edtSearch"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginHorizontal="15dp"
            android:layout_marginVertical="10dp"
            android:background="@drawable/editext_custom"
            android:drawableLeft="@mipmap/icon_search"
            android:paddingLeft="5dp" />


    </LinearLayout>


    // Fill food or restaurant

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:background="#D6D6D6"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/fragHome_search_tvFoodTab"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center"
            android:text="Food"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/fragHome_search_tvRestaurantTab"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center"
            android:text="Restaurant"
            android:textSize="25sp" />

    </LinearLayout>


    // List view food

    <RelativeLayout
        android:id="@+id/fragHome_lv_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="86">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </ScrollView>

        <ListView
            android:id="@+id/fragHome_lvfood"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout_editor_absoluteY="8dp" />

    </RelativeLayout>


</LinearLayout>