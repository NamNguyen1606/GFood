<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_weight="100"
    android:orientation="horizontal"
    android:paddingBottom="10dp"
    android:paddingTop="10dp">

    <ImageView
        android:id="@+id/img_CartList"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="30"
        android:padding="10dp"
        android:scaleType="fitXY"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="60"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvProdName_CartList"
            android:layout_weight="14"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/tvResName_CartList"
            android:layout_weight="13"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/tvProdPrice_CartList"
            android:layout_weight="13"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:textSize="15sp"/>

        <LinearLayout
            android:layout_weight="20"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnSub_CartList"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="7"
                android:padding="10dp"
                android:text="-"
                android:textSize="28dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tvQuantity_CartList"
                android:text="1"
                android:textSize="30sp"
                android:gravity="center"
                android:layout_weight="6"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>

            <Button
                android:id="@+id/btnPus_CartList"
                android:text="+"
                android:textSize="25dp"
                android:layout_weight="7"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="10"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnDelProd_CartList"
            android:layout_weight="4"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#FCFAFA"
            android:text="x"
            android:textSize="20sp" />

        <FrameLayout
            android:layout_weight="6"
            android:layout_width="match_parent"
            android:layout_height="0dp"></FrameLayout>
    </LinearLayout>


</LinearLayout>